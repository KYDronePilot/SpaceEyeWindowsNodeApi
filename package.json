{
  "name": "earth_from_space_live_windows_node_api",
  "version": "1.0.0",
  "description": "Node Windows API for Earth from Space Live",
  "main": "src/index.ts",
  "gypfile": true,
  "scripts": {
    "configure": "node-gyp configure",
    "build:addon": "node-gyp build && ts-node bin/addon.ts",
    "build:ts": "rimraf dist && tsc -b",
    "build": "npm run build:addon && npm run build:ts",
    "build:dev": "node-gyp -j 16 build --debug",
    "start": "ts-node src/index.ts",
    "clean": "node-gyp clean",
    "prepare": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "files": ["addons/*", "src/index.ts"],
  "devDependencies": {
    "@types/node": "^14.0.13",
    "node-gyp": "^7.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "node-addon-api": "^3.0.0"
  }
}
