{
  "name": "SpaceEyeWindowsNodeApi",
  "version": "1.0.0",
  "description": "Native Windows API for SpaceEye app to set multi-monitor wallpaper images",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "gypfile": true,
  "scripts": {
    "configure": "node-gyp configure",
    "build:addon": "node-gyp build && ts-node bin/addon.ts",
    "build:ts": "tsc -b && cpx src/addons/* dist/addons",
    "build": "npm run build:addon && npm run build:ts",
    "build:dev": "node-gyp -j 16 build --debug",
    "start": "ts-node src/index.ts",
    "clean": "node-gyp clean && rimraf dist",
    "prepare": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^14.0.13",
    "copyfiles": "^2.3.0",
    "cpx": "^1.5.0",
    "node-gyp": "^7.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "node-addon-api": "^3.0.0"
  }
}
